  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for(let listing of allListings) { %>
      <div class="col-md-4">
        <div class="card">
            <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text">&#2547; <%= listing.price.toLocaleString("en-BD") %> / night</p>
                <a href="/listings/<%= listing.id %>" class="btn btn-outline-primary">View Details</a>
            </div>
        </div>
    </div>
    <% } %>
    </div>
